<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".UI.AddProductActivity">

    <TextView
        android:id="@+id/add_product_only_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/add_product_background"
        android:drawableEnd="@drawable/add_product"
        android:drawablePadding="10dp"
        android:fontFamily="@font/helvetica"
        android:padding="10dp"
        android:text="Add Product Image"
        android:textColor="#5C00FF"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/show_Image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:visibility="gone"
        app:srcCompat="@drawable/shirt_image" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/add_product_background"
        android:drawableEnd="@drawable/add_product"
        android:fontFamily="@font/helvetica"
        android:padding="10dp"
        android:text="Add product others images"
        android:textColor="#5C00FF"
        android:textSize="20sp" />
</LinearLayout>